# Database Configuration
# Get this from your Neon PostgreSQL dashboard
# Format: postgresql://username:password@hostname/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-example-123456.us-east-2.aws.neon.tech/restaurant_db?sslmode=require

# Stripe Configuration
# Get these from https://dashboard.stripe.com/test/apikeys
# Use test keys (starting with sk_test_ and pk_test_) for development
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Server Configuration
PORT=8080

# Optional: JWT Secret for admin authentication (for future use)
# JWT_SECRET=your_random_secret_key_here

# Optional: Admin credentials (for future authentication)
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=your_secure_password_here